@import 'https://fonts.googleapis.com/css2?family=Lovers+Quarrel&display=swap'

@font-face
  font-family digit
  src url('digital-7_mono.ttf') format('truetype');

html 
  height: 100%
  body 
    overflow: hidden
    margin: 0
    height: 100%
    $background = rgb(203, 235, 219) 0%, rgb(55, 148, 192) 120%
    background: -webkit-linear-gradient($background)
    background: -moz-linear-gradient($background)
    background: -o-linear-gradient($background)
    background: -ms-linear-gradient($background)
    background: linear-gradient($background)

#words 
  font-family: "Lovers Quarrel", cursive
  font-size: 50px
  color: #666
  width: 500px
  & > div
    opacity: 0

#elapseClock
  text-align: right
  font-family: digit
  font-size: 22px
  margin-top: 10px
  margin-bottom: 10px
  .digit
    font-size: 36px

#loveu
  padding: 5px
  margin-top: 60px
  margin-right: 120px
  text-align: right
  .signature
    margin-top: 10px
    font-style: italic

.fullscreen 
  position: absolute
  right: 0
  bottom: 0
  height: 100%
  width: 100%

.container 
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

